{
  "name": "oscar-odds",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "tsx server.ts",
    "dev": "tsx server.ts",
    "smoke": "sh -c 'tsx server.ts & PID=$!; trap \"kill $PID 2>/dev/null || true\" EXIT; sleep 2; curl -fsS -i http://localhost:3000/api/profiles'",
    "scrape:sources": "tsx scripts/poll-sources.ts --once",
    "poll:sources": "tsx scripts/poll-sources.ts --interval-minutes 30",
    "typecheck": "tsc --noEmit",
    "build:client": "esbuild app.ts --bundle --format=esm --platform=browser --target=es2022 --outfile=app.js",
    "build": "npm run build:client",
    "lint": "eslint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.0.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.1",
    "globals": "^17.3.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^3.2.4"
  }
}
