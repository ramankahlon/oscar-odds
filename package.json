{
  "name": "oscar-odds",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "tsx server.ts",
    "dev": "tsx server.ts",
    "smoke": "sh -c 'tsx server.ts & PID=$!; trap \"kill $PID 2>/dev/null || true\" EXIT; sleep 2; curl -fsS -i http://localhost:3000/api/profiles'",
    "scrape:sources": "tsx scripts/poll-sources.ts --once",
    "poll:sources": "tsx scripts/poll-sources.ts --interval-minutes 30",
    "typecheck": "tsc --noEmit",
    "build:wasm": "asc wasm/scoring.ts --outFile wasm/scoring.wasm --runtime stub --initialMemory 1 --optimizeLevel 3",
    "build:client": "esbuild app.ts --bundle --format=esm --platform=browser --target=es2022 --external:node:fs --outfile=app.js",
    "build": "npm run build:client",
    "lint": "eslint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "pretest:e2e": "npm run build:client",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.212.0",
    "@opentelemetry/instrumentation-express": "^0.60.0",
    "@opentelemetry/instrumentation-http": "^0.212.0",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@opentelemetry/semantic-conventions": "^1.40.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.0.0",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "js-yaml": "^4.1.1",
    "lz-string": "^1.5.0",
    "pino": "^10.3.1",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.21.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.3.0",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^3.2.4",
    "assemblyscript": "^0.28.9",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.1",
    "globals": "^17.3.0",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^3.2.4"
  }
}
